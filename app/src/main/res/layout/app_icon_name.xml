<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/appIconHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="50dp">

        <ImageView
            android:id="@+id/appIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:src="@drawable/app_logo"
            />

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/textHeaderMargin"
        android:fontFamily="@font/barlow_bold"
        android:padding="@dimen/textHeaderPadding"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="@dimen/textHeaderSize"
        app:layout_constraintEnd_toEndOf="@+id/appIconHeader"
        app:layout_constraintStart_toStartOf="@+id/appIconHeader"
        app:layout_constraintTop_toBottomOf="@+id/appIconHeader" />

</androidx.constraintlayout.widget.ConstraintLayout>